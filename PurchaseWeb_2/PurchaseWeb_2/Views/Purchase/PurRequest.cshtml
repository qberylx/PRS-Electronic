
@{
    ViewBag.Title = "PurRequest";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Create Purchase Request</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="col-md-10">
                                <select class="form-control" data-val="true" data-val-number="The field TypePRId must be a number." id="TypePRId" name="TypePRId">
                                    <option value="0">Please choose yout PR type</option>
                                    <option value="1">Stockable - Wafer - Non Consign</option>
                                    <option value="2">Stockable - Wafer - Consignment</option>
                                    <option value="3">Stockable - Non Wafer</option>
                                    <option value="4">Non Stockable</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-success" onclick="addPRHead()"><i class="fa fa-plus-circle">&nbsp; Purchase Request</i></button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<!-- Alert Modal -->
<div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="alertModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content ">
            <div class="modal-header alert alert-danger alert-dismissible">
                <h5 class="modal-title " id="alertModalLabel">Alert</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Please choose the Purchase Request Type
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    // to create PRHead
    function addPRHead() {
        var TypePrID = $("#TypePRId").val();
        if (TypePrID != "0") {
            console.log = TypePrID;
            window.location.href = "/Purchase/AddPurRequest?Doctype=" + TypePrID;
        }            
        else {
            console.log = TypePrID;
            $('#alertModal').modal('show');
            return false;
        }

            
    }
</script>

