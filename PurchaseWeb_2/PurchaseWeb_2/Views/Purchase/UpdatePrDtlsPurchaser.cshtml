@model PurchaseWeb_2.ModelData.PR_Details

    @*using (Html.BeginForm("UpdatePrDtlsPurchaser", "Purchase", FormMethod.Post)) *@
    @using (Ajax.BeginForm("UpdatePrDtlsPurchaser", "Purchase", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "DivPRDtlsListForPurchaser" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>PR_Details</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <input type="hidden" value="@ViewBag.PrDtlsId" id="PrDtlsId" name="PrDtlsId" />
            <input type="hidden" value="@ViewBag.PrMstId" id="PrMstId" name="PrMstId" />
            <input type="hidden" value="mod" id="mod" name="mod" />

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Unit Price :
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("CurrId",
                            new SelectList(ViewBag.CurList, "CurrId", "Kod"),
                            new { @class = "custom-select form-control-border" })
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Tot Amount (Exc. Tax) :
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TotCostnoTax, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TotCostnoTax, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        TAX % :
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Tax, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tax, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Tot Amount (Inc. Tax) :
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TotCostWitTax, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TotCostWitTax, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Tax Group :
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TaxCode, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Tax Class :
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TaxClass, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TaxClass, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="modal-footer">
                
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" id="clsUpdate">Close</button>
                    <input type="submit" value="Save" class="btn btn-primary"  />
                
            </div>
        </div>
    }

    


