@model List<PurchaseWeb_2.Models.PRDtlsPurchaser>


<div class="card card-primary">
    <div class="card-header">
        <div class="card-title">
            <h4>PR Details List</h4>
        </div>
    </div>
    
    
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-responsive table-head-fixed" style="width:100%; zoom:95%">
                    <tr>
                        <th>

                        </th>
                        <th>
                            DomiPartNo
                        </th>
                        <th>
                            VendorPartNo
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            UOM
                        </th>
                        <th>
                            Required <br /> Delivery <br /> Date
                        </th>
                        <th>
                            Remarks
                        </th>
                        <th>
                            Device
                        </th>
                        <th>
                            SO#
                        </th>
                        <th>
                            Curr
                        </th>
                        <th>
                            Unit Price
                        </th>
                        @if (ViewBag.PrTypeId == 3)
                        {
                            <th>
                                Total Amount <br /> (Exc Tax)
                            </th>
                        }
                        <th>
                            Tax %
                        </th>
                        <th>
                            Total Amount <br /> (Inc Tax)
                        </th>
                        <th>
                            Tax <br /> Group
                        </th>
                        <th>
                            Tax <br /> Class
                        </th>

                        <th></th>
                    </tr>
                    @{ int i = 0; }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <td>
                                @i
                            </td>
                            
                            <!--
                            <td>
                                <input type="checkbox" id="PoFlagIsChecked" name="PoFlagIsChecked" onchange="UpdatePOFlag(@item.PRDtId)" />
                            </td>
                            -->
                            <td>
                                @Html.DisplayFor(modelItem => item.DomiPartNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VendorPartNo)
                            </td>
                            <td>
                                @{
                                    String strQty = String.Format("{0:n}", item.Qty);
                                }
                                @strQty

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UOM_mst.UOMName)
                            </td>
                            <td>
                                @{
                                    DateTime reqdate = (DateTime)item.ReqDevDate;
                                    String strReqdate = reqdate.ToString("dd/MM/yyyy");
                                }
                                @strReqdate
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Remarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Device)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalesOrder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Currency_Mst1.Kod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            @if (item.TypePRId == 3)
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.TotCostnoTax)
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.Tax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotCostWitTax)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaxCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaxClass)
                            </td>
                            <td>
                                <button type="button" class="btn btn-default" id="UpdatePrDtls" data-toggle="modal" data-target="#modalUpdatePrDtls" data-assigned-id="@item.PRDtId" value="@item.PRDtId" onclick="UpdatePrDtls(@item.PRDtId)">
                                    <i class="fa fa-pen"></i>
                                </button>

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
    <div class="card card-footer">
        <div class="row">
            <div class="col-md-3">
                @Html.ActionLink("Return To Main List", "PRProsesList", "Purchase", new { @class = "btn btn-primary" })
            </div>
        </div>
        
    </div>
    

    
</div>
