@model PurchaseWeb_2.ModelData.CPRFMst

@{
    ViewBag.Title = "CprfEdit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h1>CPRF Master</h1>


<div class="row">
    <div class="col-md-5">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">CPRF Master (Edit)</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("CPRFEdit", "Purchase", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CPRFId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.CPRFNo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CPRFNo, new { htmlAttributes = new { @class = "form-control", @disable="disable" } })
                                @Html.ValidationMessageFor(model => model.CPRFNo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CPRFBudget, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CPRFBudget, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CPRFBudget, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.CPRFBalance, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.CPRFBalance, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CPRFBalance, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="container">
                                <div class="row">
                                    <div class="col-centered">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-centered">
                            <a class="btn btn-info" href="@Url.Action("CPRFMaster","Purchase")">Return Back to List</a>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>


