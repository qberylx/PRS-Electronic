@model IEnumerable<PurchaseWeb_2.ModelData.PR_Mst>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PRNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PRType_mst.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatId)
        </th>
        <th>
            Items
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.PRNo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Usr_mst.Username)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Department_mst.Department_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RequestDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PRType_mst.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status_Mst.Name)
    </td>
    <td>
        @Html.DisplayFor(modelitem => item.PR_Details.Count)
    </td>

    <td>
        @switch (item.PRTypeId)
        {
            case 1:<button class="btn btn-primary" onclick="location.href = '/Purchase/AddPurDtls?PrMstId=@item.PRId' ;">Add Details</button>
                break;

            case 2: <button class="btn btn-primary" onclick="location.href = '/Purchase/AddPurDtlsType2?PrMstId=@item.PRId' ;">Add Details</button>
                break;

            case 3: <button class="btn btn-primary" onclick="location.href = '/Purchase/AddPurDtlsType3?PrMstId=@item.PRId' ;">Add Details</button>
                break;

            case 4: <button class="btn btn-primary" onclick="location.href = '/Purchase/AddPurDtlsType4?PrMstId=@item.PRId' ;">Add Details</button>
                break;


        }

        @Html.ActionLink("Delete", "DelPRMst", "Purchase", new { PrMstId = item.PRId }, new { @class = "btn btn-danger" })


    </td>
</tr>
}

</table>
