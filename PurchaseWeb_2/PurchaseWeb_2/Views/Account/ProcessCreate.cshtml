@model PurchaseWeb_2.Models.UserModel

@{
    Layout = null;
}

@{string sUsername = (string)Session["Username"];}
@{string ssessionId = HttpContext.Current.Session.SessionID;}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register New User</title>
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/Formstyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <!-- web-fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poller+One" rel="stylesheet">
    <!-- //web-fonts -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
</head>
<body>
    <div class="center-container">
        
        @using (Html.BeginForm("ProcessCreate", "Account", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="w3ls-agileinfo">
                <h1>Welcome @Session["Username"]</h1>
            </div>
            <div class="bg-agile">
                <div class="top-icons-agileits-w3layouts">
                    <p class="mid-w3ls"><i class="fa fa-list-ul" aria-hidden="true"></i></p>
                    <span></span>
                    <p><i class="fa fa-thumbs-up" aria-hidden="true"></i></p>
                    <span></span>
                    <p><i class="fa fa-check-circle" aria-hidden="true"></i></p>

                    <ul class="icons-text">
                        <li>Register</li>
                        <li>Approve</li>
                        <li>Done</li>
                    </ul>
                </div>
                <hr />
                <h2>You have been directed to this page because you did not yet register with us. </h2>
                <h3>Please fill in the form below</h3>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" }) *@
                    
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @Value = sUsername, Placeholder = "UserName" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @* @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" }) *@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email", Placeholder ="Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-10">
                            @Html.DropDownList("Dpt_id", ViewBag.departmentList as SelectList, "Select Department", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Dpt_id, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    @*Html.EditorFor(model => model.Dpt_id, new { htmlAttributes = new { @class = "form-control" } }) *@
                    @* @Html.LabelFor(model => model.Dpt_id, htmlAttributes: new { @class = "control-label col-md-2" }) *@


                </div>

                <div class="form-group">
                    @* @Html.LabelFor(model => model.Psn_id, htmlAttributes: new { @class = "control-label col-md-2" }) *@
                    <div class="col-md-10">
                        @Html.DropDownList("Psn_id", ViewBag.positionList as SelectList, "Select Position", new { @class = "form-control" })

                        @*@Html.EditorFor(model => model.Psn_id, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.Psn_id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div></div>
            }

        </div>
</body>
</html>
