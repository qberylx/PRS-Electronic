<div class="row">
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Department Master (Edit)</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("departmentEdit", "Main", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.AccTypeDepID, new { @Value = Model.AccTypeDepID })

                    <div class="form-group">
                        <label class="control-label col-md-10">Department Id</label>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.AccTypeDepID, new { htmlAttributes = new { @class = "form-control ", @Value = Model.AccTypeDepID, @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.AccTypeDepID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-10">Department Name</label>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DeptName, new { htmlAttributes = new { @class = "form-control", @Value = Model.DeptName } })
                            @Html.ValidationMessageFor(model => model.DeptName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-10">Department Code</label>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DeptCode, new { htmlAttributes = new { @class = "form-control", @Value = Model.DeptCode } })
                            @Html.ValidationMessageFor(model => model.DeptCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-info" href="@Url.Action("Department","Main")">Return Back to List</a>
            </div>
        </div>
    </div>
</div>

