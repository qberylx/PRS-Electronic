@model PurchaseWeb_2.ModelData.Department_mst

@{
    ViewBag.Title = "DepartmentEdit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Department Master (Edit)</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("departmentEdit", "Main", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Department_mst</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Dpt_id, new { @Value = ViewBag.department.Dpt_id})

            <div class="form-group">
                @Html.LabelFor(model => model.Dpt_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Dpt_id, new { htmlAttributes = new { @class = "form-control " , @Value = ViewBag.department.Dpt_id, @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.Dpt_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Department_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Department_name, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.department.Department_name } })
                    @Html.ValidationMessageFor(model => model.Department_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }
    </div>
</div>

        

<div>
    @Html.ActionLink("Back to Department", "Index")
</div>
