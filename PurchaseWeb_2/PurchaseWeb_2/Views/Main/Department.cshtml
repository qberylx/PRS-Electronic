@model PurchaseWeb_2.ModelData.AccTypeDept

@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Department Master</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("Department", "Main", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class = "control-label">Department Name</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AccTypeDepID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DeptName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<section class="row">
    <div class="col-lg-6">
        <div id="divAlert">
            @Html.Partial("_Notifications")
        </div>        

        @{Html.RenderAction("departmentList", "Main"); }
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#divAlert").delay(2000).fadeOut("slow");
    });
</script>