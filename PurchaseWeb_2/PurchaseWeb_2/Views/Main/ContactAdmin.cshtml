
@model PurchaseWeb_2.ModelData.Usr_mst

@{
    ViewBag.Title = "ContactAdmin";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<div class="row">
    <div class="col-5">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Contact Administrator</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ContactAdmin", "Main", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>To :</label>
                        <a>Adminstrator</a>
                    </div>
                    <div class="form-group">
                        <label>From :</label>
                        <a>@Model.Username</a> <br />
                        <a>@Model.Email</a>
                        <input type="hidden" name="Username" id="Username" value="@Model.Username" />
                        <input type="hidden" name="usr_id" id="usr_id" value="@Model.usr_id" />
                    </div>
                    <div class="form-group">
                        <label>Subject :</label>
                        <input type="text" name="subject" id="subject" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Message :</label>
                        <textarea name="message" id="message" class="form-control"> </textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="send" id="send" value="submit" class="btn btn-primary">Send</button>
                    </div>
                }
            </div>
        </div>
        <div id="divAlert">
            @Html.Partial("_Notifications")
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#divAlert").delay(3000).fadeOut("slow");
    });
</script>
