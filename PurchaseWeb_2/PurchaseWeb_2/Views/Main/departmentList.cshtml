@model IEnumerable<PurchaseWeb_2.ModelData.AccTypeDept>


<table class="table table-sm">
    <tr>
        <th>
            Department Name
        </th>
        <th>
            Department Code
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DeptName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeptCode)
        </td>
        <td>
            <a href="@Url.Action("departmentEdit","Main", new { id=item.AccTypeDepID })"  class="btn btn-info"><i class="fa fa-pen"> </i></a> &nbsp;&nbsp;
            <a href="@Url.Action("departmentDelete","Main", new { id=item.AccTypeDepID })"  class="btn btn-danger"><i class="fa fa-trash"></i></a>

            
        </td>
    </tr>
}

</table>
