@model PurchaseWeb_2.ModelData.Position_mst

@{
    ViewBag.Title = "roleEdit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Role Master (Edit)</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("roleEdit", "Main", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Psn_id, new { @Value = ViewBag.role.Psn_id })

                        <div class="form-group">
                            <label class="control-label col-md-10">Role Id</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Psn_id, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.role.Psn_id, @disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.Psn_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-10">Role Name</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Position_name, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.role.Position_name } })
                                @Html.ValidationMessageFor(model => model.Position_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a class="btn btn-info" href="@Url.Action("Role","Main")">Return Back to List</a>
            </div>
        </div>
    </div>
</div>




