@model PurchaseWeb_2.ModelData.Section_Mst

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title">
                    Section
                </div>
            </div>
            <div class="card-body">
                @using (Ajax.BeginForm("UTSectionSave", "Budget", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divSectionLst", OnSuccess = "OnSuccess" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-3">
                        <label class="form-label">Section</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <input type="hidden" name="SectionId" id="SectionId" value="0" />
                            <input class="btn btn-primary" type="submit" value="Save" name="save" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="divSectionLst">
            @{ Html.RenderAction("UTSectionLst", "Budget");}
        </div>

    </div>
</div>

<script type="text/javascript">
    function OnSuccess() {
        this.reset();
        console.log("reset value");
    }
</script>
