@model PurchaseWeb_2.ModelData.AccTypeExpens

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title">
                    Account Expenses Type
                </div>
            </div>
            <div class="card-body">
                @using (Ajax.BeginForm("UTExpensesSave", "Budget", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divUTExpensesLst" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Account Expenses Name</label>
                            @Html.EditorFor(model => model.ExpName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ExpName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Account Expenses Code</label>
                            @Html.EditorFor(model => model.ExpCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ExpCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <input type="hidden" name="AccTypeExpensesID" id="AccTypeExpensesID" value="0" />
                            <input class="btn btn-primary" type="submit" value="Save" name="save" />
                        </div>
                    </div>
                    
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="divUTExpensesLst">
            @{ Html.RenderAction("UTExpensesList", "Budget");}
        </div>

    </div>
</div>