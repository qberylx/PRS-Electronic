@model PurchaseWeb_2.ModelData.Process_Mst

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title">
                    Process
                </div>
            </div>
            <div class="card-body">
                @using (Ajax.BeginForm("UTProcessMstSave", "CPRF", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divProcessLst", OnSuccess = "OnSuccess" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Process Code</label>
                            @Html.EditorFor(model => model.ProcessCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProcessCode, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Process</label>
                            @Html.EditorFor(model => model.ProcessDesc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProcessDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <input type="hidden" name="Id" id="ProcessId" value="0" />
                            <input class="btn btn-primary" type="submit" value="Save" name="save" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="divProcessLst">
            @{ Html.RenderAction("UTProcessMstLst", "CPRF");}
        </div>

    </div>
</div>

<script type="text/javascript">
    function OnSuccess() {
        this.reset();
        console.log("reset value");
    }
</script>
