@model IEnumerable<PurchaseWeb_2.ModelData.CostCentre_Mst>

<div class="card card-secondary">
    <div class="card-header">
        <div class="card-title text-light">
            <h6>Cost Centre List</h6>
        </div>
    </div>
    <div class="card-body table-responsive p-0" style="height: 600px;">
        <div id="notification">
            @Html.Partial("_Notifications")
        </div>
        <table class="table table-striped table-head-fixed text-nowrap">
            <thead>
                <tr>
                    <td>
                        No
                    </td>
                    <td>
                        Cost Centre 
                    </td>
                    <td>
                        Description
                    </td>
                </tr>
            </thead>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>@i</td>
                    <td>@item.CostCentreStr</td>
                    <td>@item.AccTypeDept.DeptName - @item.Process_Mst.ProcessDesc - @item.CprfArea_Mst.AreaDesc</td>
                    <td>
                        @using (Ajax.BeginForm("UTCostCentreMstDelete", "CPRF"
                            , new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divCostCentreLst" }))
                        {
                            <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                            <input type="hidden" name="CostCentreId" id="CostCentreId" value="@item.CostCentreId" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#notification").delay(3000).fadeOut("slow");
    });
</script>
