@model PurchaseWeb_2.ModelData.CprfCategory_Mst

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <div class="card-title">
                    Category
                </div>
            </div>
            <div class="card-body">
                @using (Ajax.BeginForm("UTCategoryMstSave", "CPRF"
                    , new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divCategoryLst", OnSuccess = "OnSuccess" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    
                    <div class="row">
                        <div class="col-md-3">
                            <label class="form-label">Category Desc</label>
                            @Html.EditorFor(model => model.CategoryDesc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CategoryDesc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <input type="hidden" name="CategoryID" id="CategoryID" value="0" /> 
                            <input class="btn btn-primary" type="submit" value="Save" name="save" />
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="divCategoryLst">
            @{ Html.RenderAction("UTCategoryMstLst", "CPRF");}
        </div>

    </div>
</div>

<script type="text/javascript">
    function OnSuccess() {
        this.reset();
        console.log("reset value");
    }
</script>
